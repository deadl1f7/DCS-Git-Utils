{
    "name": "dcs-git-utils",
    "version": "1.0.0",
    "description": "",
    "main": "dist/main.js",
    "bin": {
        "dcs-git-utils": "dist/main.js"
    },
    "scripts": {
        "prestart": "npm run compile && npm run copy-assets",
        "clean": "shx rm -rf dist && shx rm -rf bin",
        "compile": "tsc",
        "build": "npm run clean && npm run compile && npm run copy-assets",
        "copy-assets": "shx cp lua/sorter_lib.lua dist/lua",
        "start": "node dist/main.js",
        "package": "pkg .",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ci": "vitest"
    },
    "author": "",
    "license": "ISC",
    "pkg": {
        "scripts": [
            "dist/**/*.js",
            "!dist/**/*.test.js",
            "!dist/**/*.spec.js",
            "!dist/tests/**/*",
            "dist/**/*.js"
        ],
        "assets": [
            "./lua/sorter_lib.lua"
        ],
        "targets": [
            "node18-win-x64",
            "node18-linux-x64"
        ],
        "outputPath": "bin"
    },
    "devDependencies": {
        "@types/archiver": "^6.0.3",
        "@types/decompress": "^4.2.7",
        "@types/inquirer": "^8.2.12",
        "@types/lodash": "^4.17.20",
        "@types/luaparse": "^0.2.13",
        "@types/node": "^24.0.10",
        "pkg": "^5.8.1",
        "shx": "^0.4.0",
        "vitest": "^4.0.14"
    },
    "dependencies": {
        "archiver": "^7.0.1",
        "chokidar": "^3.6.0",
        "decompress": "^4.2.1",
        "fast-glob": "^3.3.3",
        "fengari": "^0.1.4",
        "fengari-interop": "^0.1.3",
        "inquirer": "^8.2.7",
        "lodash": "^4.17.21",
        "luaparse": "^0.3.1",
        "slash": "^5.1.0"
    }
}
